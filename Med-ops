<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8"/>
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>

<style>
body{font-family:Inter;background:#ffe6f5;padding:30px}
#calendar{max-width:1200px;margin:auto}
.card{background:linear-gradient(135deg,#9be2e8,#ffc1e3);padding:20px;border-radius:20px;margin:10px}
</style>
</head>

<body>

<h2>DIA: CONN Activities</h2>

<div id="cards"></div>
<div id="calendar"></div>

<script>

const API_KEY = "YOUR_API_KEY";
const CAL_ID = "YOUR_CALENDAR_ID";

fetch(`https://www.googleapis.com/calendar/v3/calendars/${CAL_ID}/events?key=${API_KEY}&singleEvents=true&orderBy=startTime`)
.then(r=>r.json())
.then(data=>{

let events=[];

data.items.forEach(e=>{
 if(!e.start) return;

 const start=e.start.dateTime||e.start.date;

 events.push({
   title:e.summary,
   start:start
 });

 document.getElementById("cards").innerHTML+=`
 <div class="card">
   <b>${e.summary}</b><br>
   ${new Date(start).toLocaleString()}
 </div>`;
});

new FullCalendar.Calendar(document.getElementById('calendar'),{
 initialView:'dayGridMonth',
 headerToolbar:{
   left:'prev,next today',
   center:'title',
   right:'dayGridMonth,timeGridWeek,dayGridYear'
 },
 events:events
}).render();

});

</script>
</body>
</html>
